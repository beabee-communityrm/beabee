{
	"createSpecialUrlsSchema": {
		"body": {
			"type": "object",
			"required": ["name", "urlDuration"],
			"properties": {
				"name": {
					"type": "string",
					"minLength": 1
				},
				"expiresDate": {
					"type": ["string", "null"],
					"format": "date",
					"default": null
				},
				"expiresTime": {
					"type": ["string", "null"],
					"format": "time2",
					"default": null
				},
				"urlDuration": {
					"type": "integer"
				},
				"actions": {
					"type": "array",
					"items": {
						"type": "object",
						"required": ["name"],
						"properties": {
							"name": {
								"type": "string"
							},
							"params": {
								"type": "object"
							}
						}
					}
				}
			}
		}
	},
	"updateSpecialUrlsSchema": {
		"body": {
			"type": "object",
			"required": ["action"],
			"properties": {
				"action": {
					"type": "string",
					"enum": ["toggle", "force-expire", "delete"]
				}
			}
		}
	}
}
