{
	"createSpecialUrlsSchema": {
		"body": {
			"type": "object",
			"required": ["name", "urlDuration", "thanksMessage"],
			"properties": {
				"name": {
					"type": "string"
				},
				"expiresDate": {
					"type": "string",
					"format": "date"
				},
				"expiresTime": {
					"type": "string",
					"format": "time2"
				},
				"urlDuration": {
					"type": "integer"
				},
				"thanksMessage": {
					"type": "string"
				},
				"actions": {
					"type": "array",
					"items": {
						"type": "object",
						"required": ["name"],
						"properties": {
							"name": {
								"type": "string"
							},
							"params": {
								"type": "object"
							}
						}
					}
				}
			}
		}
	},
	"updateSpecialUrlsSchema": {
		"body": {
			"type": "object",
			"required": ["action"],
			"properties": {
				"action": {
					"type": "string"
				}
			},
			"oneOf": [
				{
					"required": ["name", "thanksMessage"],
					"properties": {
						"action": {
							"const": "update"
						},
						"name": {
							"type": "string"
						},
						"thanksMessage": {
							"type": "string"
						}
					}
				},
				{
					"properties": {
						"action": {
							"type": "string",
							"enum": ["toggle", "force-expire", "export-urls", "delete"]
						}
					}
				}
			]
		}
	}
}
