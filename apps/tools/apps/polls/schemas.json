{
	"createPollSchema": {
		"body": {
			"type": "object",
			"required": ["question", "slug", "closed"],
			"properties": {
				"question": {
					"type": "string",
					"minLength": 1
				},
				"mergeField": {
					"type": "string"
				},
				"slug": {
					"type": "string",
					"minLength": 1
				},
				"closed": {
					"type": "boolean"
				},
				"expiresDate": {
					"type": "string",
					"format": "date"
				},
				"expiresTime": {
					"type": "string",
					"format": "time2"
				}
			}
		}
	}
}
