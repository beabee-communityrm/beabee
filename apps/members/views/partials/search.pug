form( method="get" )
	if access('superadmin')
		.form-group
			label( for="permission" ).control-label Permission
			select( name="permission" ).form-control
				option( value="" ) Show all
				each permission, p in permissions
					option( value=permission.slug, selected=( search.permission == permission.slug ? true : false ) ) #{ permission.name }
		.form-group
			label( for="show_inactive" )
				input( type="checkbox" name="show_inactive", value='true', checked=search.show_inactive )#show_inactive
				|  Show inactive members
	.form-group
		label( for="firstname" ).control-label First name
		input( type='text', name="firstname", value=search.firstname ).form-control#firstname
	.form-group
		label( for="lastname" ).control-label Last name
		input( type='text', name="lastname", value=search.lastname ).form-control#lastname
	.form-group
		label( for="email" ).control-label Email
		input( type='text', name="email", value=search.email ).form-control#email
	button.btn.btn-primary Search
