extends /src/views/base.pug

block prepend meta
	- shareTitle = 'Vote on our next campaign'
	- shareDescription = 'We believe journalism is more than information. It’s power. And now it’s time to add your voice to create positive change in Bristol.'
	- shareUrl = '/polls/campaign2019'
	- shareImage = 'https://membership.thebristolcable.org/static/imgs/polls/share.png'

block prepend title
	- title = 'Vote for our next campaign'

block header

