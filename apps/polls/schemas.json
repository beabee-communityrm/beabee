{
	"voteLinkSchema": {
		"body": {
			"type": "object",
			"oneOf": [
				{
					"required": ["email"],
					"properties": {
						"email": {
							"type": "string"
						}
					}
				},
				{
					"required": ["isAsync"],
					"properties": {
						"isAsync": {
							"type": "boolean"
						}
					}
				}
			]
		}
	},
	"answerSchemas": {
		"campaign2019": {
			"body": {
				"type": "object",
				"required": ["answer"],
				"properties": {
					"answer": {
						"type": "string",
						"enum": ["1", "2"]
					},
					"reason": {
						"type": "string"
					},
					"shareable": {
						"type": "boolean"
					},
					"volunteer": {
						"type": "boolean"
					},
					"idea": {
						"type": "string"
					}
				}
			}
		},
		"agm2019": {
			"body": {
				"type": "object",
				"required": ["answer"],
				"properties": {
					"isAsync": {
						"type": "boolean"
					}
				},
				"oneOf": [
					{
						"properties": {
							"answer": {
								"const": "yes"
							},
							"creche": {
								"type": "string",
								"enum": ["yes", "no"]
							},
							"creche_details": {
								"type": "string"
							},
							"accessibility": {
								"type": "string"
							},
							"volunteer": {
								"type": "string",
								"enum": ["yes", "no"]
							},
							"discuss": {
								"type": "string"
							},
							"before": {
								"type": "string",
								"enum": ["yes", "no"]
							}
						}
					},
					{
						"properties": {
							"answer": {
								"const": "no"
							},
							"discuss": {
								"type": "string"
							}
						}
					}
				]
			}
		},
		"directors2019": {
			"body": {
				"type": "object",
				"required": ["answer"],
				"properties": {
					"answer": {
						"const": "vote"
					},
					"candidates": {
						"type": "array",
						"maxItems": 3,
						"items": {
							"type": "string"
						}
					}
				}
			}
		},
		"agm2019-membership": {
			"body": {
				"type": "object",
				"required": ["answer"],
				"properties": {
					"answer": {
						"const": "vote"
					},
					"access": {
						"type": "integer",
						"minimum": 0,
						"maximum": 100
					},
					"access_reasons": {
						"type": "string"
					},
					"delivery": {
						"type": "integer",
						"minimum": 0,
						"maximum": 100
					},
					"delivery_reasons": {
						"type": "string"
					},
					"events": {
						"type": "integer",
						"minimum": 0,
						"maximum": 100
					},
					"events_reasons": {
						"type": "string"
					},
					"participate": {
						"type": "integer",
						"minimum": 0,
						"maximum": 100
					},
					"participate_reasons": {
						"type": "string"
					},
					"contribution": {
						"type": "integer",
						"minimum": 0,
						"maximum": 100
					},
					"contribution_reasons": {
						"type": "string"
					}
				}
			}
		},
		"agm2019-editorial": {
			"body": {
				"type": "object",
				"required": ["answer"],
				"properties": {
					"answer": {
						"type": "string",
						"enum": ["1", "2"]
					},
					"focus": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"comments": {
						"type": "string"
					}
				}
			}
		},
		"solutions": {
			"body": {
				"type": "object",
				"properties": {
					"issues": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"affected": {
						"type": "string",
						"minLength": 1
					},
					"questions": {
						"type": "string",
						"minLength": 1
					},
					"solutions": {
						"type": "string"
					},
					"organisations": {
						"type": "string"
					},
					"skills": {
						"type": "string"
					},
					"area": {
						"type": "string"
					},
					"publish": {
						"type": "boolean"
					}
				}
			}
		}
	}
}
