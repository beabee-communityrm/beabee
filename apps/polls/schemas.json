{
	"voteLinkSchema": {
		"body": {
			"type": "object",
			"required": ["email"],
			"properties": {
				"email": {
					"type": "string"
				}
			}
		}
	},
	"answerSchemas": {
		"campaign2019": {
			"body": {
				"type": "object",
				"required": ["answer"],
				"properties": {
					"answer": {
						"type": "string",
						"enum": ["1", "2"]
					},
					"reason": {
						"type": "string"
					},
					"shareable": {
						"type": "boolean"
					},
					"volunteer": {
						"type": "boolean"
					},
					"idea": {
						"type": "string"
					}
				}
			}
		},
		"agm2019": {
			"body": {
				"type": "object",
				"required": ["answer"],
				"oneOf": [
					{
						"required": ["creche", "volunteer"],
						"properties": {
							"answer": {
								"type": "const",
								"const": "yes"
							},
							"creche": {
								"type": "enum",
								"enum": ["yes", "no"]
							},
							"creche_details": {
								"type": "string"
							},
							"accessibility": {
								"type": "string"
							},
							"volunteer": {
								"type": "enum",
								"enum": ["yes", "no"]
							}
						}
					},
					{
						"properties": {
							"answer": {
								"type": "const",
								"const": "no"
							}
						}
					}
				]
			}
		}
	}
}
