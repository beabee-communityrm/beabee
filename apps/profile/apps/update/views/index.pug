extends /src/views/base.pug

block prepend title
	- title = "Edit Profile"

block contents
	.row
		.col-md-3
			- page = 'profile'
			include ../../../views/partials/sidebar.pug
		.col-md-9
			+page_header( 'Edit Profile' )
			form( method="post" ).form-horizontal
				+csrf
				+input( 'email', 'Email', 'email', { value: user.email, left: 3, right: 4 } )
				+input( 'text', 'First name', 'firstname', { value: user.firstname, left: 3, right: 4 } )
				+input( 'text', 'Last name', 'lastname', { value: user.lastname, left: 3, right: 4 } )
				hr
				+input( 'checkbox', 'Receive paper', 'delivery_optin', { value: user.delivery_optin, options: { yes: 'Yes' }, left: 3, right: 4 } )
				+input( 'text', 'Address line 1', 'delivery_line1', { value: user.delivery_address.line1, left: 3, right: 4 } )
				+input( 'text', 'Address line 2', 'delivery_line2', { value: user.delivery_address.line2, left: 3, right: 4 } )
				+input( 'text', 'City/town', 'delivery_city', { value: user.delivery_address.city, left: 3, right: 4 } )
				+input( 'text', 'Postcode', 'delivery_postcode', { value: user.delivery_address.postcode, left: 3, right: 4 } )
				+form_button( 'Update', 'primary', { left: 3 } )
