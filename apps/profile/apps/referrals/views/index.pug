extends /src/views/base.pug

block prepend title
	- title = "Referrals"

block contents
	.row
		.col-md-3
			- page = 'referrals'
			include ../../../views/partials/sidebar.pug
		.col-md-9.col-lg-7
			+page_header( 'Referrals' )
			ul.row
				each referral in referrals
					li.col-md-6
						.panel.panel-default
							.panel-body
								p
									| You referred
									|
									= referral.referree.firstname


