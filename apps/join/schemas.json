{
	"joinSchema": {
		"body": {
			"type": "object",
			"required": ["period", "amount"],
			"properties": {
				"period": {
					"type": "string",
					"enum": ["monthly", "annually"]
				},
				"payFee": {
					"type": "boolean"
				}
			},
			"oneOf": [
				{
					"properties": {
						"amount": { "type": "integer", "minimum": 1 }
					},
					"if":{
						"properties": {
							"period": {"const": "monthly"},
							"amount": {"const": 1}
						}
					},
					"then": {
						"required": ["payFee"],
						"properties": {
							"payFee": {"const": true}
						}
					}
				},
				{
					"required": ["amountOther"],
					"properties": {
						"amount": { "const": "other" },
						"amountOther": { "type": "integer", "minimum": 1 }
					},
					"if": {
						"properties": {
							"period": {"const": "monthly"},
							"amountOther": {"const": 1}
						}
					},
					"then": {
						"required": ["payFee"],
						"properties": {
							"payFee": {"const": true}
						}
					}
				}
			]
		}
	},
	"referralSchema": {
		"body": {
			"type": "object",
			"required": ["referralCode", "referralGift"],
			"properties": {
				"referralCode": {
					"type": "string",
					"minLength": 1
				},
				"referralGift": {
					"type": "string"
				}
			}
		}
	},
	"completeSchema": {
		"query": {
			"type": "object",
			"required": ["redirect_flow_id"],
			"properties": {
				"redirect_flow_id": {
					"type": "string"
				}
			}
		}
	}
}
