{
  "name": "beabee",
  "version": "2.2.8",
  "description": "A community engagement system for community newsrooms",
  "main": "built/app.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beabee-communityrm/beabee.git"
  },
  "author": "Tom Lynch & Chris Roberts",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/beabee-communityrm/beabee/issues"
  },
  "homepage": "https://github.com/beabee-communityrm/beabee#readme",
  "scripts": {
    "start": "npm run dev:app",
    "dev:app": "npm run build && docker compose restart && concurrently -c red,green,blue npm:dev:app:*",
    "dev:app:watch": "tsc-watch -p tsconfig.build.json --noClear --onSuccess 'docker compose restart app api_app webhook_app router'",
    "dev:app:watch:assets": "gulp watch",
    "dev:app:logs": "while true; do docker compose logs -f --tail=0 app api_app webhook_app; sleep 1; done",
    "dev:api": "npm run build && docker compose restart && concurrently -c red,green,blue npm:dev:api:*",
    "dev:api:watch": "tsc-watch -p tsconfig.build.json --noClear --onSuccess 'docker compose restart api_app router'",
    "dev:api:logs": "while true; do docker compose logs -f --tail=0 api_app; sleep 1; done",
    "build": "rimraf built/ && gulp build && tsc -p ./tsconfig.build.json",
    "generate:index": "ts-node scripts/generate-index.ts",
    "watch": "tsc-watch -p tsconfig.build.json --noClear",
    "check": "concurrently npm:check:*",
    "check:tsc": "tsc --noEmit",
    "check:prettier": "prettier -c .",
    "check:dependencies": "dpdm -T --no-warning --no-tree --exit-code circular:1 src/app.ts src/webhooks/app.ts src/api/app.ts",
    "fix:prettier": "prettier --write .",
    "typeorm": "node --require module-alias/register node_modules/.bin/typeorm -d ./built/core/database.js",
    "test": "jest --setupFiles dotenv/config"
  },
  "dependencies": {
    "@beabee/beabee-common": "^0.20.3",
    "@captchafox/node": "^1.2.0",
    "@inquirer/prompts": "^3.3.0",
    "@sendgrid/mail": "^8.1.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "bootstrap-sass": "^3.4.3",
    "chance": "^1.1.11",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "clean-deep": "^3.4.0",
    "connect-busboy": "^1.0.0",
    "connect-pg-simple": "^9.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "csv-parse": "^5.5.2",
    "csv-stringify": "^6.4.4",
    "date-fns": "^2.30.0",
    "discourse-sso": "^1.0.5",
    "dot": "^1.1.3",
    "escape-string-regexp": "^5.0.0",
    "express": "^4.18.2",
    "express-flash": "0.0.2",
    "express-session": "^1.17.3",
    "express-winston": "^4.2.0",
    "gocardless-nodejs": "^3.18.0",
    "gunzip-maybe": "^1.4.2",
    "helmet": "^7.1.0",
    "JSONStream": "^1.3.5",
    "jsonwebtoken": "^9.0.2",
    "juice": "^10.0.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "moment": "^2.29.4",
    "muhammara": "^4.0.0",
    "nodemailer": "^6.9.7",
    "otpauth": "^9.2.1",
    "papaparse": "^5.4.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "pug": "^3.0.2",
    "query-string": "^7.1.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
    "slugify": "^1.6.6",
    "stripe": "^14.21.0",
    "tar-stream": "^3.1.6",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "yaml-front-matter": "^4.1.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/chance": "^1.1.6",
    "@types/connect-busboy": "^1.0.3",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/discourse-sso": "^1.0.3",
    "@types/dot": "^1.1.7",
    "@types/express": "^4.17.21",
    "@types/express-flash": "0.0.5",
    "@types/express-session": "^1.17.10",
    "@types/gunzip-maybe": "^1.4.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/module-alias": "^2.0.4",
