    "url": "git+https://github.com/thebristolcable/membership-system.git"
  },
  "author": "Tom Lynch & Chris Roberts",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/thebristolcable/membership-system/issues"
  },
  "homepage": "https://github.com/thebristolcable/membership-system#readme",
  "dependencies": {
    "JSONStream": "^1.3.5",
    "ajv": "^6.12.5",
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "bootstrap-sass": "^3.4.1",
    "bunyan": "^1.8.14",
