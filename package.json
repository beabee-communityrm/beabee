    "prettier": "2.8.1",
    "rimraf": "^3.0.2",
    "sass": "1.57.*",
    "ts-jest": "^29.0.3",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  },
  "browserslist": [
    "last 1 versions",
    "> 1%"
  ],
  "_moduleAliases": {
    "@core": "./built/core",
    "@api": "./built/api",
    "@apps": "./built/apps",
    "@config": "./built/config/config.js",
    "@locale": "./built/locales/current.js",
    "@models": "./built/models"
  }
}
