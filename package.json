    "@types/pug": "^2.0.10",
    "@types/tar-stream": "^3.1.3",
    "@types/uuid": "^9.0.7",
    "@types/yaml-front-matter": "^4.1.3",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "dpdm": "^3.14.0",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.1",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "prettier": "3.1.0",
    "rimraf": "^5.0.5",
    "sass": "1.57.*",
    "ts-jest": "^29.1.1",
    "tsc-watch": "^6.0.4",
    "tsconfig": "^7.0.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  },
  "browserslist": [
    "last 1 versions",
    "> 1%"
  ],
  "_moduleAliases": {
    "@core": "./built/core",
    "@api": "./built/api",
    "@apps": "./built/apps",
    "@config": "./built/config/config.js",
    "@locale": "./built/locales/current.js",
    "@models": "./built/models",
    "@type": "./built/type",
    "@enums": "./built/enums"
  },
  "overrides": {
    "gulp-sourcemaps": {
      "postcss": "8.4.32"
    }
  }
}