{
  "name": "membership-system",
  "version": "2.2.8",
  "description": "Membership System for The Bristol Cable",
  "main": "built/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebristolcable/membership-system.git"
  },
  "author": "Tom Lynch & Chris Roberts",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/thebristolcable/membership-system/issues"
  },
  "homepage": "https://github.com/thebristolcable/membership-system#readme",
  "scripts": {
    "start": "npm run dev:app",
    "dev:app": "npm run build && docker compose restart && concurrently -c red,green,blue npm:dev:app:*",
    "dev:app:watch": "tsc-watch -p tsconfig.build.json --noClear --onSuccess 'docker compose restart app api_app webhook_app router'",
    "dev:app:watch:assets": "gulp watch",
    "dev:app:logs": "while true; do docker compose logs -f --tail=0 app api_app webhook_app; sleep 1; done",
    "dev:api": "npm run build && docker compose restart && concurrently -c red,green,blue npm:dev:api:*",
    "dev:api:watch": "tsc-watch -p tsconfig.build.json --noClear --onSuccess 'docker compose restart api_app router'",
    "dev:api:logs": "while true; do docker compose logs -f --tail=0 api_app; sleep 1; done",
    "build": "rimraf built/ && gulp build && tsc -p ./tsconfig.build.json",
    "watch": "tsc-watch -p tsconfig.build.json --noClear",
    "check": "concurrently npm:check:*",
    "check:tsc": "tsc --noEmit",
    "check:prettier": "prettier -c .",
    "check:dependencies": "dpdm -T --no-warning --no-tree --exit-code circular:1 src/app.ts src/webhooks/app.ts src/api/app.ts",
    "fix:prettier": "prettier --write .",
    "typeorm": "node --require module-alias/register node_modules/.bin/typeorm",
    "test": "jest --setupFiles dotenv/config"
  },
  "dependencies": {
    "@beabee/beabee-common": "^1.18.0",
    "@sendgrid/mail": "^7.7.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.2.2",
    "body-parser": "^1.20.1",
    "bootstrap-sass": "^3.4.3",
    "chance": "^1.1.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "clean-deep": "^3.4.0",
    "connect-busboy": "^1.0.0",
    "connect-pg-simple": "^8.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "csv-parse": "^5.4.0",
    "csv-stringify": "^6.3.0",
    "date-fns": "^2.29.3",
    "discourse-sso": "^1.0.5",
    "dot": "^1.1.3",
    "escape-string-regexp": "^5.0.0",
    "express": "^4.18.2",
    "express-flash": "0.0.2",
    "express-session": "^1.17.3",
    "express-winston": "^4.2.0",
    "flat": "^5.0.2",
    "gocardless-nodejs": "^3.8.0",
    "gunzip-maybe": "^1.4.2",
    "helmet": "^4.6.0",
    "inquirer": "^8.2.5",
    "JSONStream": "^1.3.5",
    "jsonwebtoken": "^9.0.0",
    "juice": "^8.1.0",
    "lodash": "^4.17.21",
    "mandrill-api": "^1.0.45",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "muhammara": "^3.5.0",
    "nodemailer": "^6.8.0",
    "notp": "^2.0.3",
    "otpauth": "^9.1.5",
    "papaparse": "^5.3.2",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-totp": "0.0.2",
    "pg": "^8.8.0",
    "pug": "^3.0.2",
    "query-string": "^7.1.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.1",
    "slugify": "^1.6.5",
    "stripe": "^9.16.0",
    "tar-stream": "^3.0.0",
    "typeorm": "^0.2.39",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "yaml-front-matter": "^4.1.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/chance": "^1.1.3",
    "@types/connect-busboy": "^1.0.0",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/csurf": "^1.11.2",
    "@types/discourse-sso": "^1.0.1",
    "@types/dot": "^1.1.5",
    "@types/express": "^4.17.15",
    "@types/express-flash": "0.0.2",
