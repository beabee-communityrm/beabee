    "chance": "^1.1.7",
    "clean-deep": "^3.4.0",
    "connect-busboy": "0.0.2",
    "connect-mongodb-session": "^2.4.1",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "discourse-sso": "^1.0.3",
    "dot": "^1.1.3",
    "escape-string-regexp": "^4.0.0",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "flat": "^5.0.2",
    "git-rev": "^0.2.1",
    "gocardless-nodejs": "^1.4.1",
    "gunzip-maybe": "^1.4.2",
    "helmet": "^4.1.1",
    "hummus": "^1.0.110",
    "inquirer": "^7.3.3",
    "lodash": "^4.17.20",
    "mandrill-api": "^1.0.45",
