    "passport-totp": "0.0.2",
    "pug": "^3.0.0",
    "query-string": "^6.13.5",
    "request": "^2.88.2",
    "stripe": "^8.108.0",
    "tar-stream": "^2.1.4",
    "thirty-two": "^1.0.2",
    "uuid": "^8.3.1"
  },
  "scripts": {
    "start": "npm run build && docker-compose start && concurrently -c green,red,blue npm:watchApp npm:watch nodemon",
    "lint": "eslint apps/ src/ test/ webhook.js",
    "watchApp": "tsc --watch --preserveWatchOutput --incremental",
    "watch": "gulp watch",
    "build": "rimraf built/ && gulp build && tsc",
    "test": "ava"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.2",
    "@types/lodash": "^4.14.164",
    "@types/mongoose": "^5.7.37",
    "@types/node": "^14.14.7",
    "@types/passport": "^1.0.4",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "autoprefixer": "^10.0.1",
    "ava": "^3.13.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.10.0",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "nodemon": "^2.0.4",
    "postcss": "^8.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.5"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ]
  },
  "browserslist": [
    "last 1 versions",
    "> 1%"
  ],
  "nodemonConfig": {
    "watch": [
      "built/"
    ],
    "ignore": [
      "built/tsconfig.tsbuildinfo",
      "built/static/*"
    ],
    "delay": "500",
    "signal": "SIGTERM",
    "exec": "docker-compose restart app && docker-compose logs -f app"
  },
  "_moduleAliases": {
    "@core": "./built/src/js",
    "@apps": "./built/apps",
    "@config": "./built/config/config.json",
    "@models": "./built/src/models"
  }
}
