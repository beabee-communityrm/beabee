    "@types/passport-local": "^1.0.34",
    "@types/pug": "^2.0.6",
    "@types/tar-stream": "^2.2.2",
    "@types/uuid": "^9.0.0",
    "@types/yaml-front-matter": "^4.1.0",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.11",
