mixin giftsList(gifts, amount)
	ul.gifts
		li(data-amount=amount).gifts__note.small.hidden.js-gift-note Only available at £#{amount} or more
		each gift in gifts
			li.gifts__item
				input(type='radio', id='gift_' + gift.id, name='referralGift', value=gift.id, required, data-amount=amount).js-gift
				label(for='gift_' + gift.id)
					img(src='/static/imgs/join/gifts/mug.jpg').gift-img
					small.gift-name= gift.name
			li(data-id=gift.id).gifts__item-details.hidden.js-gift-details
				img(src='/static/imgs/join/gifts/mug.jpg').gifts__item-details__img
				h4= gift.name
				p.small= gift.description
				if gift.options
					p.small
						b Select from…
					each option in gift.options
						p.small
							span.gift-option= option.id
							each value in option.values
								if gift.id !== 'jtj-mug' || jtjInStock[value]
									label.gift-option-value
										input(type='radio', name='referralGiftOptions[' + option.id + ']', value=value)
										= value

.gifts-wrapper
	+giftsList(gifts5, 5)
	+giftsList(gifts3, 3)
