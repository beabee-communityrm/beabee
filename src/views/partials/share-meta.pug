- shareImage = pageSettings.shareImage
if !(shareImage.startsWith('http://') || shareImage.startsWith('https://'))
	- shareImage = audience + shareImage

meta(property="og:locale" content="en_GB")
meta(property="og:type" content="website")
meta(property="og:title" content=pageSettings.shareTitle)
meta(property="og:description" content=pageSettings.shareDescription)
meta(property="og:url" content=audience + pageSettings.shareUrl)
meta(property="og:site_name" content=Options('organisation'))
meta(property="og:image" content=shareImage)
meta(property="og:image:secure_url" content=shareImage)
meta(name="twitter:card" content="summary_large_image")
meta(name="twitter:description" content=pageSettings.shareDescription)
meta(name="twitter:title" content=pageSettings.shareTitle)
meta(name="twitter:site" content=Options('share-twitter-handle'))
meta(name="twitter:image" content=shareImage)
meta(name="twitter:creator" content=Options('share-twitter-handle'))
