extends /views/base.pug

block contents
	.row
		.col-md-3
			- page = 'home'
			include partials/sidebar.pug
		.col-md-9
			.page-header
				h3 Hello #{ user.firstname }

			each notice in notices
				if notice.active
					a(href=notice.url || false).alert.alert-success!= notice.text

			.row
				.col-md-9
					p Welcome to your online membership.

					dl
						dt Joined
						dd= moment( user.joined ).format('Do MMMM YYYY')
						dt Contribution
						dd= user.contributionDescription

					if user.membership && user.membership.dateExpires && !user.membership.isActive
						.alert.alert-danger Your membership has expired
