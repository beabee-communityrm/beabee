{
	"createPollSchema": {
		"body": {
			"type": "object",
			"required": ["question", "slug", "closed", "template"],
			"properties": {
				"question": {
					"type": "string"
				},
				"slug": {
					"type": "string"
				},
				"template": {
					"type": "string",
					"enum": ["custom", "builder", "ballot"]
				},
				"closed": {
					"type": "boolean"
				},
				"mcMergeField": {
					"type": "string"
				},
				"pollMergeField": {
					"type": "string"
				},
				"allowUpdate": {
					"type": "boolean"
				},
				"startsDate": {
					"type": "string",
					"format": "date"
				},
				"startsTime": {
					"type": "string",
					"format": "time2"
				},
				"expiresDate": {
					"type": "string",
					"format": "date"
				},
				"expiresTime": {
					"type": "string",
					"format": "time2"
				}
			}
		}
	}
}
