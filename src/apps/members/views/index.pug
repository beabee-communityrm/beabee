extends /views/notrack.pug

block prepend title
	- title = app.title

block contents
	.row
		.col-md-3
			+page_header( 'Search' )
			include partials/search.pug
			if access('superadmin')
				hr
				h4 Tools
				a(href="/members/add").btn.btn-warning.btn-sm Add member
		.col-md-9
			+page_header( title, { small: count + ' of ' + total + ' displayed' } )
			if count > 0
				include partials/table.pug
				include partials/pagination.pug
			else
				+messageBlock( 'info', 'There are no members to display.' )
