+page_header( member.fullname, { strong: true } )
ul.nav.nav-pills.nav-stacked
	li( class=( page == 'overview' ? 'active' : '' ) ): a( href='/members/' + member.id ) Overview
	if access( 'superadmin' )
		li( class=( page == 'profile' ? 'active' : '' ) ): a( href='/members/' + member.id + '/profile' ) Profile
		li( class=( page === 'exports' ? ' active' : '' ) ): a(href='/members/' + member.id + '/exports' ) Exports
		li( class=( page == 'gocardless' ? 'active' : '' ) ): a( href='/members/' + member.id + '/gocardless' ) GoCardless
		if ( member.otp.activated )
			li( class=( page == '2fa' ? 'active' : '' ) ): a( href='/members/' + member.id + '/2fa' ) 2FA
		li( class=( page == 'permissions' ? 'active' : '' ) ): a( href='/members/' + member.id + '/permissions' ) Permissions

	if page == 'overview'
		if access( 'superadmin' )
			hr
			h4 Actions
				form(method='POST' onsubmit='return confirm("Are you sure? This is completely irreversible")')
					+csrf
					p: button(name='action' value='permanently-delete').btn.btn-sm.btn-danger.outline Permanently delete
