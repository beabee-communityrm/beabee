extends /views/notrack.pug

block prepend title
	- title = 'Roles'
	- page = 'permissions'

block contents
	.row
		.col-md-3
			include /apps/members/apps/member/views/partials/sidebar.pug
		.col-md-9
			+page_header( member.fullname )
			.row
				.col-md-8
					.list-group
						if member.permissions.length > 0
							each permission, p in member.permissions
								include /views/partials/permission.pug
						else
							p This member has no permissions.
					h4 Grant
					- action = 'Grant'
					include partials/permission-form.pug
						
