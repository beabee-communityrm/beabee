extends /views/notrack.pug

block prepend title
	- title = 'Roles'
	- page = 'permissions'

block contents
	.row
		.col-md-3
			include /apps/members/apps/member/views/partials/sidebar.pug
		.col-md-9
			+page_header( member.fullname )
			.row
				.col-md-7
					.list-group
						if member.roles.length > 0
							each role, p in member.roles
								include /views/partials/permission.pug
						else
							p This member has no roles.
			hr
			.row
				.col-md-5
					h4 Add role
					- action = 'Add'
					include partials/role-form.pug
