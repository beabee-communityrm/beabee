{
  "addContactSchema": {
    "body": {
      "type": "object",
      "required": ["firstname", "lastname", "email"],
      "properties": {
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["permission"],
            "properties": {
              "permission": {
                "type": "string",
                "enum": ["member", "admin", "superadmin"]
              },
              "startTime": {
                "type": "string",
                "format": "time2"
              },
              "startDate": {
                "type": "string",
                "format": "date"
              },
              "expiryTime": {
                "type": "string",
                "format": "time2"
              },
              "expiryDate": {
                "type": "string",
                "format": "date"
              }
            }
          }
        },
        "addAnother": {
          "type": "boolean"
        }
      },
      "oneOf": [
        {
          "properties": {
            "type": { "const": "None" }
          }
        },
        {
          "properties": {
            "type": { "const": "Manual" },
            "source": {
              "type": "string"
            },
            "reference": {
              "type": "string"
            },
            "amount": {
              "type": "number"
            },
            "period": {
              "type": "string",
              "enum": ["monthly", "annually"]
            }
          }
        },
        {
          "required": ["customerId", "mandateId"],
          "properties": {
            "type": { "const": "GoCardless" },
            "customerId": {
              "type": "string"
            },
            "mandateId": {
              "type": "string"
            },
            "amount": {
              "type": "number"
            },
            "period": {
              "type": "string",
              "enum": ["monthly", "annually"]
            },
            "payFee": {
              "type": "boolean"
            }
          }
        }
      ]
    }
  }
}
